@using ESCS.COMMON.Response;
@using ESCS.MODEL.ESCS;
@{
    Layout = null;
    var data = ViewBag.Data as BaseResponse<ThongTinEmail<ThongBaoGiamDinh>>;
    var mail = data.data_info.mail;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>THÔNG BÁO DUYỆT PHƯƠNG ÁN KHẮC PHỤC XE Ô TÔ</title>
</head>
<body style="font-family: 'Tahoma'">
    <div style="border:1px solid #035299; border-radius:12px; margin:5px; background-color:azure">
        <div style="width: 710px; margin: 0 auto;">
            <h2 style="color: #035299; text-align: center">THÔNG BÁO TRÌNH PHƯƠNG ÁN KHẮC PHỤC XE Ô TÔ</h2>
            <div style="padding: 8px; text-align: justify;">

                <p>Kính gửi : <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">Đơn vị sửa chữa cùng khách hàng</span></p>

                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:5px;"><span style="color: #4552a2"> @mail.ten_cty</span> đồng ý với chi phí báo giá sửa chữa với xe <span style="color: #4552a2"> @mail.doi_tuong</span> như sau:</p>

                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:10px;">Số hồ sơ: <span style="color: #4552a2">@mail.so_hs</span></p>

                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:3px;">
                    Khách hàng: <span class="name_body" style="color: #4552a2">
                        @mail.nguoi_lhe - @mail.dthoai_lhe @if (!string.IsNullOrEmpty(mail.email_lhe))
                        {<span>- @mail.email_lhe</span>}
                    </span>
                </p>

                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:3px;">Tổng tiền phê duyệt sửa chữa: <span style="color: #4552a2">@mail.tien_duyet_gia</span> VND</p>

                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:3px;">Thông tin liên hệ BTV: <span style="color: #4552a2">@mail.thong_tin_btv</span></p>

                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:3px;">Trạng thái hồ sơ: <span style="color: #4552a2">Từ chối</span></p>

                <p style="font-family: 'Tahoma'; font-weight: bold; margin-top: 10px;">
                    <span>
                        * Để xem chi tiết về nội dung phê duyệt báo giá sửa chữa, vui lòng xem chi tiết file đính kèm
                    </span>
                </p>

                <p style="color: #035299; font-weight: bold; margin-top: 10px;">Trân trọng Cảm ơn!</p>
            </div>
        </div>
    </div>
</body>
</html>