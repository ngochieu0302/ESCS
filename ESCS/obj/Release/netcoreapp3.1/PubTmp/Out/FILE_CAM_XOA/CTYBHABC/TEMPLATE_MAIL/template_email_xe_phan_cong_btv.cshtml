@using ESCS.COMMON.Response;
@using ESCS.MODEL.ESCS;
@{
    Layout = null;
    var data = ViewBag.Data as BaseResponse<ThongTinEmail<ThongBaoGiamDinh>>;
    var mail = data.data_info.mail;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>THÔNG BÁO PHÂN CÔNG BỒI THƯỜNG VIÊN</title>
</head>
<body style="font-family: 'Tahoma';font-size:14px;line-height:1.6;">
    <div style="border:1px solid #035299; border-radius:12px; margin:5px; background-color:azure">
        <div style="width: 710px; margin: 0 auto;">
            <h2 style="color: #035299; text-align: center">THÔNG BÁO PHÂN CÔNG BỒI THƯỜNG VIÊN</h2>
            <div style="padding: 8px; text-align: justify;">
                <p style="font-family: 'Tahoma'; font-size: 14px;">Kính gửi Anh/chị: <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">@mail.ten_btv</span></p>
                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:5px;">
                    Hệ thống thông báo hồ sơ đã được phân công cho bạn xử lý cho xe ô tô <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">@mail.doi_tuong</span>
                    với số hồ sơ bồi thường <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">@mail.so_hs</span>
                    theo hợp đồng bảo hiểm <span style="color: #035299">@mail.so_hd</span>
                </p>
                <p style="font-family: 'Tahoma'; font-size: 14px;">Đề nghị cán bộ @mail.ten_btv thực hiện các bước tiếp theo theo quy định.</p>
                <p style="font-family: 'Tahoma'; font-size: 14px; color: #035299; font-weight: bold; margin-top: 5px;">Trân trọng Cảm ơn!</p>
            </div>
        </div>
    </div>
</body>
</html>