<form class="col-12" name="frmRecoverPass" method="post">
    <!-- email -->
    <div class="form-group row">
        <div class="col-12">
            <input name="username" required class="form-control" placeholder="Tên đăng nhập" />
            <span id="validate-recover-pass-username" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group mb-3 row">
        <div class="col-6">
            <img id="img-captcha-recover-pass" src="@Url.Action("CaptchaRecoverPass", "Home")" style="width:100%;margin-top:5px;" />
        </div>
        <div class="col-6 mt-2">
            <input class="form-control" required name="captcha" autocomplete="off" placeholder="Captcha" />
        </div>
        <div class="col-12">
            <span id="validate-recover-pass-captcha" class="text-danger"></span>
        </div>
    </div>
    <!-- pwd -->
    <div class="row mt-3">
        <div class="col-12">
            <button class="btn btn-block btn-lg btn-primary text-uppercase" id="btnRecoverPass" type="button" name="action">Khôi phục</button>
        </div>
    </div>
</form>