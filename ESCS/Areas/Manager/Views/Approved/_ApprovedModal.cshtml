@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<div id="CarCompensationModal" class="esmodal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="esmodal-dialog">
        <div class="esmodal-content">
            <div class="esmodal-header py-1">
                <h4 class="esmodal-title" id="CarCompensationModalLabel">
                    <span id="noi_dung_trinh"></span>
                </h4>
                <button type="button" class="close" data-dismiss="esmodal" aria-hidden="true">×</button>
            </div>
            <div class="esmodal-body p-1" style="background-color:#54667a0a; height:100vh;">
                <div class="row">
                    <div class="col-12" id="CarCompensationModalContentFull">
                        <partial name="_ApprovedContent" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="popoverGhiChu" class="popover popover-x popover-default" style="display:none; width:500px">
