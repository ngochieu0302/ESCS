<style>
    #ds_can_bo_tkiem tr td {
        padding: 0px;
    }
</style>
<div class="modal fade bs-example-modal-lg" id="modalNhap" tabindex="-1" data-backdrop="static" data-keyboard="false" role="dialog" aria-labelledby="myLargeModalLabel">
    <div class="modal-dialog modal-lg" role="document" style="max-width:unset;width:75%; margin-bottom:unset; margin-top:10px;">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Cấu hình phê duyệt<span id="nsd_luu" style="font-size:14px; margin-left: 10px; font-style: italic"></span></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            </div>
            <div class="modal-body" style="padding-bottom:3px;">
                <form name="frmLuu" method="post" novalidate="novalidate">
                    <input type="hidden" name="so_id" />
                    <div class="row">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="_required">Đối tác</label>
                                <select class="select2 form-control custom-select" required name="ma_doi_tac" style="width: 100%; height:36px;"></select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="_required">Chi nhánh</label>
                                <select class="select2 form-control custom-select" required name="ma_chi_nhanh" style="width: 100%; height:36px;"></select>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label class="_required">Tên nhóm</label>
                                <input type="text" maxlength="100" autocomplete="off" name="ten_nhom" required class="form-control" placeholder="Tên nhóm" />
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:5px">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="_required">Nghiệp vụ</label>
                                <select class="select2 form-control custom-select" required name="nghiep_vu" style="width: 100%; height:36px;">
                                    <option value="">Chọn nghiệp vụ</option>
                                    <option value="XE">Xe ô tô</option>
                                    <option value="XE_MAY">Xe máy</option>
                                    <option value="NG">Con người</option>
                                    <option value="THANH_TOAN">Thanh toán</option>
                                </select>
                            </div>
                        </div>
                        <div class="col col-3">
                            <div class="form-group">
                                <label class="_required" for="ngay_ad">Ngày áp dụng</label>
                                <div class="input-group">
                                    <input type="text" class="form-control datepicker" name="ngay_ad" display-format="date" value-format="number" placeholder="dd/mm/yyyy">
                                    <div class="input-group-append">
                                        <span class="input-group-text"><span class="ti-calendar"></span></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="_required">Loại trình</label>
                                <select class="select2 form-control custom-select" required name="loai" style="width: 100%; height:36px;">
                                    <option value="">Chọn loại</option>
                                    <option value="DT">Đồng thời</option>
                                    <option value="TT">Tuần tự</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="_required">Loại tờ trình</label>
                                <select class="select2 form-control custom-select" required name="loai_trinh" style="width: 100%; height:36px;">
                                </select>
                            </div>
                        </div>                       
                    </div>
                    <div class="row" style="margin-top: 5px;">
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="_required">Tự động</label>
                                <select class="select2 form-control custom-select" required name="tu_dong" style="width: 100%; height:36px;">
                                    <option value="K">Không tự động</option>
                                    <option value="C">Tự động</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="_required">Nhóm trình phân cấp</label>
                                <select class="select2 form-control custom-select" required name="phan_cap" style="width: 100%; height:36px;">
                                    <option value="">Chọn trạng thái</option>
                                    <option value="K">Trình nội bộ</option>
                                    <option value="C">Trình trên phân cấp</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-3">
                            <div class="form-group">
                                <label class="_required">Trạng thái</label>
                                <select class="select2 form-control custom-select" required name="trang_thai" style="width: 100%; height:36px;">
                                    <option value="">Chọn trạng thái</option>
                                    <option value="D">Đang sử dụng</option>
                                    <option value="C">Không sử dụng</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-top:5px">
                        <div class="col-sm-6">
                            <div class="card" style="margin-bottom:unset;min-height:256px;">
                                <div class="card-body px-0" style="padding:unset !important">
                                    <div class="border mb-1 rounded">
                                        <div class="justify-content-between align-items-center p-2 card-title-bg border-bottom" style="text-align:center">
                                            <h5 class="m-0">Chi nhánh duyệt</h5>
                                        </div>
                                        <div class="pd-10">
                                            <input type="text" id="input_tkiem_chi_nhanh" autocomplete="off" placeholder="Tìm kiếm chi nhánh" class="form-control">
                                        </div>
                                        <div class="pd-10 scrollable" id="ds_chi_nhanh_tkiem" style="height:240px">
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="card" style="margin-bottom:unset;min-height:256px;">
                                <div class="card-body px-0" style="padding:unset !important">
                                    <div class="border mb-1 rounded">
                                        <div class="justify-content-between align-items-center p-2 card-title-bg border-bottom" style="text-align:center">
                                            <h5 class="m-0">Cán bộ duyệt</h5>
                                        </div>
                                        <div class="pd-10">
                                            <input type="text" name="tim" id="input_tkiem_can_bo" autocomplete="off" placeholder="Tìm kiếm cán bộ" class="form-control">
                                        </div>
                                        <div class="scrollable"  style="height:240px">
                                            <div class="table-responsive" style="max-height:30vh">
                                                <table class="table table-bordered">
                                                    <thead class="font-weight-bold">
                                                        <tr class="text-center uppercase">
                                                            <th style="width:50px">Chọn</th>
                                                            <th>Tên cán bộ</th>
                                                            <th style="width:60px">Thứ tự</th>
                                                            <th style="width:92px">Thứ tự duyệt</th>
                                                            <th style="width:87px">Duyệt chính</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody id="ds_can_bo_tkiem">
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer" style="display:block">
                <button type="button" class="btn btn-outline-primary btn-sm wd-80" id="btnXoa"><i class="fas fa-trash-alt"></i> Xóa</button>
                <button type="button" class="btn btn-primary btn-sm wd-90 float-right" data-dismiss="modal"><i class="fas fa-window-close"></i> Đóng</button>
                <button type="button" class="btn btn-primary btn-sm wd-90 float-right" id="btnLuu"><i class="fa fa-save"></i> Lưu</button>
                <button type="button" class="btn btn-primary btn-sm wd-90 float-right" id="btnCopy"><i class="fa fa-save"></i> Copy</button>
            </div>
        </div>
    </div>
</div>