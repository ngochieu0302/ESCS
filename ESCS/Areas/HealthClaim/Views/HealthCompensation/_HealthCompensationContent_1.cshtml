<div class="row">
    <div class="col-9 px-0">
        <div class="card mb-0">
            <div class="card-body p-0">
                <div class="border rounded" style="height:73vh">
                    <div class="d-flex justify-content-between align-items-center p-2 card-title-bg border-bottom">
                        <h5 class="m-0">Thông tin khám chữa bệnh và yêu cầu bảo hiểm</h5>
                    </div>
                    <div class="p-2">
                        <form name="frmThemLanTiepNhan" method="post">
                            <input type="hidden" name="so_id" value="" />
                            <input type="hidden" name="lan" value="" />
                            <div class="row">
                                <div class="col-12">
                                    <div class="row">
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label class="">Giờ khám/vào viện</label>
                                                <div class="input-group bootstrap-timepicker timepicker">
                                                    <input class="form-control input-small time" name="gio_vv" type="text" />
                                                    <div class="input-group-append">
                                                        <span class="input-group-text">
                                                            <span class="ti-calendar"></span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label class="">Ngày khám/vào viện</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control datepicker" name="ngay_vv" display-format="date" value-format="number" placeholder="mm/dd/yyyy">
                                                    <div class="input-group-append">
                                                        <span class="input-group-text"><span class="ti-calendar"></span></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label class="">Giờ kết thúc/ra viện</label>
                                                <div class="input-group bootstrap-timepicker timepicker">
                                                    <input class="form-control input-small time" name="gio_vv" type="text" />
                                                    <div class="input-group-append">
                                                        <span class="input-group-text">
                                                            <span class="ti-calendar"></span>
                                                        </span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-3">
                                            <div class="form-group">
                                                <label class="">Ngày kết thúc/ra viện</label>
                                                <div class="input-group">
                                                    <input type="text" class="form-control datepicker" name="ngay_rv" display-format="date" value-format="number" placeholder="mm/dd/yyyy">
                                                    <div class="input-group-append">
                                                        <span class="input-group-text"><span class="ti-calendar"></span></span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top:5px">
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label for="nguon" class="_required">Cơ sở y tế</label>
                                                <div class="input-group" style="cursor:pointer">
                                                    <input type="text" name="benh_vien" style="cursor:pointer;" required="" col-val="" onclick="chonBenhVien(this);" class="form-control" autocomplete="off" placeholder="Click chọn bệnh viện">
                                                    <div class="input-group-append">
                                                        <label class="input-group-text">
                                                            <a href="javascript:void(0)" id="btnThemDanhMucBenhVien">
                                                                <i class="fas fa-plus-square" title="Thêm bệnh viện"></i>
                                                            </a>
                                                        </label>
                                                        <label class="input-group-text" for="">
                                                            <a href="#" onclick="xoaChon(this,'BV')">
                                                                <i class="fas fa-times"></i>
                                                            </a>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="form-group">
                                                <label>Nhà thuốc</label>
                                                <div class="input-group" style="cursor:pointer">
                                                    <input type="text" name="nha_thuoc" style="cursor:pointer;z-index:999" col-val="" onclick="chonNhaThuoc(this);" class="form-control" autocomplete="off" placeholder="Click chọn nhà thuốc">
                                                    <div class="input-group-append">
                                                        <label class="input-group-text d-none">
                                                            <a href="javascript:void(0)" id="btnThemDanhMucNhaThuoc">
                                                                <i class="fas fa-plus-square" title="Thêm nhà thuốc"></i>
                                                            </a>
                                                        </label>
                                                        <label class="input-group-text" for="">
                                                            <a href="#" onclick="xoaChon(this,'NT')">
                                                                <i class="fas fa-times"></i>
                                                            </a>
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row" style="margin-top:10px">
                                        <div class="col-6">
                                            <h5>Quyền lợi yêu cầu bảo hiểm</h5>
                                        </div>
                                        <div class="col-6" style="text-align:right">
                                            <a href="javascript:void(0)" class="font-weight-bold" id="btnXemQuyenLoiChiTiet" data-toggle="modal">
                                                <i class="fas fa-file-search"></i> Xem quyền lợi chi tiết GCN bảo hiểm
                                            </a>
                                        </div>
                                    </div>
                                    
                                    <div class="table-responsive" style="max-height:275px">
                                        <table class="table table-bordered fixed-header">
                                            <thead class="font-weight-bold">
                                                <tr class="text-center uppercase">
                                                    <th>Sự kiện bảo hiểm</th>
                                                    <th>Hình thức khám chữa bệnh</th>
                                                    <th>Quyền lợi</th>
                                                    <th>Số tiền YC</th>
                                                </tr>
                                            </thead>
                                            <tbody class="text-center" id="tbl_bao_lanh_quyen_loi_ct"></tbody>
                                            <tfoot style="height:34.6px;">
                                                <tr class="text-center card-title-bg" style="font-weight:bold">
                                                    <td colspan="3">
                                                        Tổng cộng
                                                    </td>
                                                    <td style="text-align:right" id="tong_tien_yc"></td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12 mt-2">
                                    <button type="button" class="btn btn-primary btn-sm wd-85 float-right" id="btnLuuThongTinTiepNhan">
                                        <i class="fas fa-save mr-2"></i>Lưu
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-3 pr-0">
        <div class="card">
            <div class="card-body p-0">
                <div class="border rounded" style="height: 73vh; position: relative;">
                    <div class="justify-content-between align-items-center p-2 card-title-bg text-center">
                        <h5 class="m-0">Các lần khám chữa/bệnh</h5>
                    </div>
                    <table class="table table-hover" id="tblDanhSachLanKhamChuaBenh" style="border-bottom:1px solid #e8eef3;">
                        <thead>
                        <tr>
                            <th class="text-center">Ngày khám</th>
                            <th class="text-center">Số tiền yêu cầu</th>
                        </tr>
                        </thead>
                        <tbody class="text-center" id="tblLanTiepNhan">
                        </tbody>
                    </table>
                    <table class="table" style="position: absolute;bottom:0px;">
                        <tfoot class="text-center card-title-bg">
                        <tr>
                            <td style="font-weight: bold">Tổng cộng</td>
                            <td style="font-weight: bold; text-align: right" id="tong_tien_hs"></td>
                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
