<div id="modalChangePass" class="modal fade" data-backdrop="static" data-keyboard="false" tabindex="-1">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header py-1 modal-draggable">
                <h4 class="modal-title" id="modalDocumentTitle">Đổi mật khẩu</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-12 px-3">
                        <form name="frmChangePass" method="post">
                            <div class="form-group">
                                <label for="pas_cu" class="_required">Mật khẩu cũ</label>
                                <input type="password" class="form-control" name="pas_cu" id="pas_cu" autocomplete="off" placeholder="Nhập vào mật khẩu cũ" required />
                            </div>
                            <div class="form-group">
                                <label for="pas_moi" class="_required">Mật khẩu mới</label>
                                <input type="password" class="form-control" name="pas_moi" id="pas_moi" autocomplete="off" placeholder="Nhập vào mật khẩu mới" required>
                            </div>
                            <div class="form-group">
                                <label for="pas_nhap_lai" class="_required">Nhập lại mật khẩu</label>
                                <input type="password" class="form-control" name="pas_nhap_lai" id="pas_nhap_lai" autocomplete="off" placeholder="Nhập lại mật khẩu mới" required>
                                <small id="re_input_error" class="form-text text-danger" style="display:none">Mật khẩu mới không trùng khớp</small>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary btn-sm" id="changePass" >
                    <i class="fas fa-unlock-alt mr-2"></i>Đổi mật khẩu
                </button>
                <button type="button" class="btn btn-primary btn-sm wd-90" data-dismiss="modal">
                    <i class="fas fa-window-close mr-2"></i>Đóng
                </button>
            </div>
        </div>
    </div>
</div>