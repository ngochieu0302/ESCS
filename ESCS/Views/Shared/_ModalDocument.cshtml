<style>
    .pdfobject-container {
        height: 72vh;
    }

    .pdfobject {
        border: 1px solid #666;
    }
    .show_loading {
        background: url(../images/loading.svg) center center no-repeat;
    }
</style>
<div id="modalDocument" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" style="max-width:90vw">
        <div class="modal-content">
            <div class="modal-header py-1 modal-draggable">
                <h4 class="modal-title" id="modalDocumentTitle">Danh sách tài liệu</h4>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body" style="background-color:#54667a0a; padding:0px">
                <div class="row p-2">
                    <div class="col-3">
                        <div class="card border mb-0">
                            <div class="card-body p-3" style="height:80vh;overflow-y:auto">
                                <div class="nav flex-column nav-pills" role="tablist" aria-orientation="vertical" id="modalDocumentTabs">
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-9 pl-0">
                        <div class="card border mb-0">
                            <div class="card-body" style="height: 80vh;overflow-y: auto; padding: .25rem !important;">
                                <div class="tab-content" id="modalDocumentContents"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*<% if(index=== 0){%>active<%}%>*@
@*<% if(index=== 0){%>show active<%}%>*@
<script type="text/html" id="templateModalDocumentTab">
    <% if(source.length > 0){
    _.forEach(source, function(item,index) { %>
    <a class="nav-link modalDocumentTabItem" style="cursor:pointer" id="modalDocumentTabItem_<%- item.ma %>" document-id="<%- item.ma %>" data-toggle="pill" href="#modalDocumentTabContent_<%- item.ma %>" role="tab" aria-controls="modalDocumentTabContent_<%- item.ma %>" aria-selected="true"><%- item.ten %></a>
    <% })
    }%>
</script>
<script type="text/html" id="templateModalDocumentContent">
    <% if(source.length > 0){
    _.forEach(source, function(item,index) { %>
    <div class="tab-pane fade" id="modalDocumentTabContent_<%- item.ma %>" style="height: 77vh;width:auto" role="tabpanel" aria-labelledby="modalDocumentTabContent_<%- item.ma %>"></div>
    <% })
    }%>
</script>