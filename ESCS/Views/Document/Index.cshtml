@{
    ViewData["Title"] = "Tài liệu hướng dẫn";
    Layout = "~/Views/Shared/_LayoutScroll.cshtml";
}

<link href="~/css/menu_tree.css" rel="stylesheet" />
<div class="container-fluid" style="min-height:unset;">
    <div class="row">
        <div class="col-lg-12 col-md-12 pd-3" style="padding:unset;">
            <div class="card" style="margin:unset; border-radius:unset">
                <div class="card-body" style="padding:5px;">
                    <div class="row">
                        <div class="col-3">
                            <div class="card border mb-0">
                                <div class="card-body p-2" style="height: 91vh;overflow-y: auto;">
                                    <div>
                                        <input type="text" style="height:26px" class="form-control" placeholder="Tìm kiếm thông tin">
                                    </div>
                                    <div class="scrollable" id="treeDocumentMenu" style="margin-top:15px"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-9" style="padding-left:0px;">
                            <div class="card border mb-0">
                                <div class="card-body p-2" style="height: 91vh;overflow-y: auto;">
                                    <h4>Hướng dẫn khai báo hồ sơ bồi thường xe cơ giới</h4>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Styles{
    <link href="~/libs/tree-js/vakata-jstree/dist/themes/default/style.min.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/libs/tree-js/vakata-jstree/dist/jstree.js" asp-append-version="true"></script>
    <script type="text/javascript">
        var json_data = [
            { "id": "XE", "parent": "#", "text": "Tài liệu hướng dẫn bồi thường xe" },
            { "id": "XE.01", "parent": "XE", "text": "Tiếp nhận hồ sơ bồi thường" },
            { "id": "XE.02", "parent": "XE", "text": "Giám định hồ sơ" },
            { "id": "XE.03", "parent": "XE", "text": "Tính toán bồi thường" },
            { "id": "NG", "parent": "#", "text": "Tài liệu hướng dẫn bồi thường con người" },
            { "id": "NG.01", "parent": "NG", "text": "Mở hồ sơ tiếp nhận" },
            { "id": "NG.02", "parent": "NG", "text": "Mở hồ sơ bảo lãnh" },
            { "id": "QTHT", "parent": "#", "text": "Quản trị hệ thống" },
            { "id": "QTHT.01", "parent": "QTHT", "text": "Đơn vị hành chính" },
            { "id": "QTHT.02", "parent": "QTHT", "text": "Phân quyền người dùng" },
        ];
        function fnLoadTreeQuyenLoiSP(json_data) {
            $('#treeDocumentMenu')
                .on('loaded.jstree', function (e, data) {
                    $('#treeDocumentMenu').jstree('open_all');
                })
                .on('search.jstree', function (nodes, str, res) {

                })
                .jstree({
                    "core": {
                        "animation": 0,
                        "check_callback": true,
                        "data": json_data,
                        "themes": {
                            "icons": false
                        }
                    },
                    "search": {
                        "case_insensitive": true,
                        "show_only_matches": true
                    },
                    "types": {
                        "#": {
                            "valid_children": ["root"]
                        },
                        "root": {
                            "icon": "/static/3.1.1/assets/images/tree_icon.png",
                            "valid_children": ["default"]
                        },
                        "default": {
                            "valid_children": ["default", "file"]
                        },
                        "file": {
                            "icon": "glyphicon glyphicon-file",
                            "valid_children": []
                        }
                    },
                    "plugins": [
                        "types", "search"
                    ]
                });
        }
        fnLoadTreeQuyenLoiSP(json_data);

    </script>
}
