@model ESCS.COMMON.Auth.user_get_pass
@{
    ViewData["Title"] = "Lấy lại mật khẩu";
    Layout = "_LayoutGetPass";
}
<div class="main-wrapper">
    <div class="auth-wrapper d-flex no-block justify-content-center align-items-center" style="background: url(../images/login-background.jpg) no-repeat center center;
        background-size: cover;">
        <div class="px-2 py-4">
            <div class="row p-3">
                <div class="col-12 mx-auto login-form-wrapper">
                    @if (Model.trang_thai == "200")
                    {
                        <div id="loginform">
                            <div class="logo text-center">
                                <b class="logo-icon">
                                    <img src="~/images/logo-icon.png" alt="homepage" class="light-logo" style="width: 200px" />
                                </b>
                            </div>
                            <!-- Form -->
                            <div class="row">
                                <div class="col-12">
                                    <form asp-action="GetPass" method="post" class="form-horizontal mt-3 form-material" id="loginform">
                                        <input asp-for="t" type="hidden" class="form-control" />
                                        <input asp-for="signature" type="hidden" class="form-control" />
                                        <div class="form-group mb-3">
                                            <div class="">
                                                <input asp-for="mat_khau_moi" type="password" class="form-control" placeholder="Nhập mật khẩu mới" />
                                                <span asp-validation-for="mat_khau_moi" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group mb-4">
                                            <div class="">
                                                <input asp-for="nhap_lai_mat_khau" type="password" class="form-control" placeholder="Nhập lại mật khẩu mới" />
                                                <span asp-validation-for="nhap_lai_mat_khau" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group text-center mt-4">
                                            <div class="col-xs-12">
                                                <button class="btn btn-info btn-md btn-block text-uppercase waves-effect waves-light" type="submit">Lưu mật khẩu mới</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    }
                    else if (Model.trang_thai == "SUCCESS")
                    {
                        <div>
                            <div class="logo">
                                <h3 class="font-weight-medium mb-3">Thông báo</h3>
                                <span class="text-muted">Cấp lại mật khẩu thành công, vui lòng trở về trang đăng nhập để tiếp tục thao tác.</span>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <a class="btn btn-block btn-lg btn-primary text-uppercase" href="/home/login" name="action">Trở lại đăng nhập</a>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div>
                            <div class="logo">
                                <h3 class="font-weight-medium mb-3">Thông báo</h3>
                                <span class="text-muted">@Model.thong_bao</span>
                            </div>
                            <div class="row mt-3">
                                <div class="col-12">
                                    <a class="btn btn-block btn-lg btn-primary text-uppercase" href="/home/login" name="action">Trở lại đăng nhập</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/libs/toastr/build/toastr.min.js"></script>
    <script src="~/libs/block-ui/jquery.blockUI.js"></script>
    <script src="~/js/common/ESUtil.js"></script>
    <script src="~/js/common/ESLoading.js"></script>
    <script src="~/js/common/NotifyService.js"></script>
    <script src="~/js/common/Service.js"></script>
    <script src="~/js/common/ButtonService.js"></script>
    <script src="~/js/common/LoginPage.js"></script>
}
