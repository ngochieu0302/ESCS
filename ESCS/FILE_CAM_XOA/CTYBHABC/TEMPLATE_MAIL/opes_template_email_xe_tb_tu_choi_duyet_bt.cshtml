@using ESCS.COMMON.Response;
@using ESCS.MODEL.ESCS;
@using RazorEngine.Text;
@{
    Layout = null;
    var data = ViewBag.Data as BaseResponse<ThongTinEmail<ThongBaoGiamDinh>>;
    var mail = data.data_info.mail;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>THÔNG BÁO TỪ CHỐI DUYỆT BỒI THƯỜNG</title>
</head>
<body style="font-family: 'Tahoma'">
    <div>
        <div style="width: 710px; margin: 0 auto;">
            <h2 style="color: #035299; text-align: center">THÔNG BÁO TỪ CHỐI DUYỆT BỒI THƯỜNG</h2>
            <div style="padding: 8px; text-align: justify;">

                <p style="font-family: 'Tahoma'; font-size: 14px;">Dear anh/chị: <span style="color:#035299">@mail.ten_btv</span></p>

                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:5px;">
                    - Hồ sơ yêu cầu bồi thường xe ô tô <span style="color: #035299;">@mail.doi_tuong</span> với số hồ sơ bồi thường <span style="color: #035299;">@mail.so_hs</span> 
                    đã được @mail.thong_tin_btv hoàn thiện và trình đến anh/chị để xét duyệt.
                </p>
               
                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:5px;">
                    - Anh/chị vui lòng kiểm tra chi tiết và duyệt bồi thường cho khách hàng
                </p>

                <br />
                <p style="color: #035299; font-weight: bold">Trân trọng cảm ơn!</p>

                <p style="margin-top:15px;">
                    <img style=" max-width: 200px;" src="@mail.logo_email" />
                </p>
                <div style="margin-left:253px; margin-top:-120px">
                    <p style="font-family: 'Tahoma'; font-size: 14px; font-weight: bold">
                        <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">@mail.slogan</span>
                    </p>
                </div>
                <div style="margin-left:250px; margin-top: -60px;">
                    <p style="color: #00CCCC; margin: 8px 0px; font-weight: bold; margin-left: 3px;"><span>@mail.ten_cty</span></p>
                    <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:55px; color:#FF7F50">
                        Địa chỉ: <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">@mail.dia_chi_cty</span>
                    </p>
                    <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:5px; color:#FF7F50">
                        Tổng đài: <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">@mail.sdt_tong_dai <span>(Miễn phí)</span></span>
                    </p>
                    <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:-18px; color:#FF7F50; margin-left: 221px;">
                        Fax: <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">@mail.fax</span>
                    </p>
                    <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:5px;color:#FF7F50">
                        Website: <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">@mail.website_cty</span>
                    </p>
                    <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:-17px;color:#FF7F50; margin-left: 220px;">
                        Email: <span style="font-family: 'Tahoma'; font-size: 14px; color: #035299">@mail.email_cty</span>
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>