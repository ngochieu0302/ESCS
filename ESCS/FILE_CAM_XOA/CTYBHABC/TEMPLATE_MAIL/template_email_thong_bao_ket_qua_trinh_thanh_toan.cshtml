@using ESCS.COMMON.Response;
@using ESCS.MODEL.ESCS;
@{
    Layout = null;
    var data = ViewBag.Data as BaseResponse<ThongTinEmail<ThongBaoGiamDinh>>;
    var mail = data.data_info.mail;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>THÔNG BÁO DUYỆT THANH TOÁN BỒI THƯỜNG</title>
</head>
<body style="font-family: 'Tahoma';font-size:14px;line-height:1.6;">
    <div style="border:1px solid #035299; border-radius:12px; margin:6px; background-color:azure">
        <div style="width: 710px; margin: 0 auto;">
            <h2 style="color: #035299; text-align: center;">THÔNG BÁO KẾT QUẢ PHÊ DUYỆT THANH TOÁN BỒI THƯỜNG</h2>
            <div style="padding: 8px; text-align: justify;">
                <p style="margin-top:5px">Kính gửi: <span style="color: #035299">Bộ phận bồi thường</span></p>

                <p>
                    Hệ thống thông báo kết quả phê duyệt thanh toán bồi thường số chứng từ: @mail.so_hs
                    của khách hàng <span style="color: #4552a2">@@ten_khach</span> theo hợp đồng bảo hiểm <span style="color: #035299">@mail.so_hd</span>
                </p>

                <p>Kết quả: </p>

                <p>Đề nghị bộ phận bồi thường thực hiện các bước tiếp theo theo quy định.</p>

                <p style="margin-top:5px;font-weight: bold;color:#035299;">Trân trọng Cảm ơn!</p>
            </div>
        </div>
    </div>
</body>
</html>