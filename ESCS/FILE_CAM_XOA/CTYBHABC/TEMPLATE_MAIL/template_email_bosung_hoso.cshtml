@using ESCS.COMMON.Response;
@using ESCS.MODEL.ESCS;
@using RazorEngine.Text;
@{
    Layout = null;
    var data = ViewBag.Data as BaseResponse<ThongTinEmail<ThongBaoGiamDinh>>;
    var mail = data.data_info.mail;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>THÔNG BÁO BỔ SUNG HỒ SƠ</title>
</head>
<body style="font-family: 'Tahoma'">
    <div style="border:1px solid #035299; border-radius:12px; margin:5px; background-color:azure">
        <div style="width: 710px; margin: 0 auto;">
            <h2 style="color: #035299; text-align: center">
                THÔNG BÁO BỔ SUNG HỒ SƠ
            </h2>
            <div style="padding: 8px; text-align: justify;">

                <p style="font-family: 'Tahoma'; font-size: 14px;">Kính gửi: <span style="color: #4552a2">Quý khách hàng</span></p>

                <p style="font-family: 'Tahoma'; font-size: 14px; margin-top:5px;">
                    @mail.ten_cty thông báo.
                Để có cơ sở xem xét giải quyết quyền lợi bảo hiểm cho xe ô tô BKS <span style="color: #4552a2">@mail.doi_tuong</span>, đề nghị Quý khách hàng bổ sung những giấy tờ sau:
            </p>

                <div style="font-family: 'Tahoma'; font-size: 14px; color: #4552a2; margin-top: 3px;">
                    @(new RawString(mail.yeu_cau_bs))
                </div>

            <div style="font-family: 'Tahoma'; font-size: 14px; color: red; font-weight: bold; margin-top: 10px">
                <span>
                    Vui lòng click vào đường link để <a href="@mail.short_link">bổ sung </a> thông tin
                </span>
            </div>

            <p style="font-family: 'Tahoma'; font-size: 14px; color: #035299; font-weight: bold">Trân trọng Cảm ơn!</p>
            </div>
        </div>
    </div>

</body>
</html>